package p1020;

import java.util.Scanner;

public class J1020_03 {
	public static void main(String[] args) {

		// 1. 학생 입력
		// 2. 학생 출력
		// 3. 학생점수 수정
		// 4. 등수 처리
		// 5. 학생 검색
		// 0. 종료
		Scanner scan = new Scanner(System.in);

		int choice = 0;
		String[] name = new String[3];
		int[][] score = new int[3][3];
		int count = 0; // 입력이 몇명됬는지 알아보려고
		int[] total = new int[3];
		double[] avg = new double[3];

		String[] title = { "이름", "국어", "영어", "수학", "총점", "평균", "등수" };

		loop: while (true) {
			// 화면구성
			System.out.println("원하는 번호를 입력하세요.");
			System.out.println("1.학생 	입력");
			System.out.println("2.학생 	출력");
			System.out.println("3.학생점수 수정");
			System.out.println("4.등수	처리");
			System.out.println("5.학생	검색");
			System.out.println("0.종		 료");
			System.out.println("---------------------------------");
			System.out.println("원하는 번호를 입력하세요");
			choice = scan.nextInt();

			switch (choice) {

			case 1:
				// 이름 입력
				System.out.println("[[학생성적 입력]]");
				System.out.println((count + 1) + "번째 이름을 입력하세요.(0. 이전페이지 이동)");
				name[count++] = scan.next();

				if (name[count++].equals("0")) {
					break;
				}
				count++; // 1명추가

				// 점수 입력
				for (int i = 0; i < 3; i++) {
					for (int j = 0; j < 3; j++) {
						System.out.println(title[j + 1] + "점수를 입력하세요");
						score[i][j] = scan.nextInt();
//						System.out.printf("이름","국어","영어","수학","총점","평균","등수");
//						System.out.printf("%s\t%d\t%d\t%d\t%d\t%.2f\t%d\t");
//						System.out.println("점수를 입력하세요");
//
//						score[i][j] = 3*i+j+1;
					}
				}

				System.out.println("학생 수 :" + count);
				System.out.println();
				break;
			case 2:
				System.out.println("[[학생 출력]]");
				for (int i = 0; i < 3; i++) {
					for (int j = 0; j < 3; j++) {
						System.out.printf("%s\n,%s,%d\t", name[count++], score[i][j]);
					}
				}
				System.out.println();
				break;
			case 3:
				break;
			case 4:
				break;
			case 5:
				break;
			case 0:
				System.out.println("프로그램 종료");
				break loop;

			} // switch

		}

	}

}
