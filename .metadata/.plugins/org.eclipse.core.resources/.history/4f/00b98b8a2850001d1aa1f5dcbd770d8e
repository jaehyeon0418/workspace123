package p1020;

import java.util.Scanner;

public class J1020_03 {
	public static void main(String[] args) {

		// 1. 학생 입력
		// 2. 학생 출력
		// 3. 학생점수 수정
		// 4. 등수 처리
		// 5. 학생 검색
		// 0. 종료
		Scanner scan = new Scanner(System.in);

		int choice = 0;
		String[] name = new String[3];
		int[][] score = new int[3][3];
		int count = 0; // 입력이 몇명됬는지 알아보려고
		int[] total = new int[3];
		double[] avg = new double[3];

		String[] title = { "이름", "국어", "영어", "수학", "총점", "평균", "등수" };

		loop: while (true) {
			// 화면구성
			System.out.println("원하는 번호를 입력하세요.");
			System.out.println("1.학생 	입력");
			System.out.println("2.학생 	출력");
			System.out.println("3.학생점수 수정");
			System.out.println("4.등수	처리");
			System.out.println("5.학생	검색");
			System.out.println("0.종		 료");
			System.out.println("---------------------------------");
			System.out.println("원하는 번호를 입력하세요");
			choice = scan.nextInt();

			switch (choice) {

			case 1:

				// 점수 입력
				loop2: 
					for (int i = count; i < 3; i++) {
					// 이름 입력
					System.out.println("[[학생성적 입력]]");
					System.out.println((count + 1) + "번째 이름을 입력하세요.(-1. 이전 페이지 이동)");
					name[count] = scan.next();   // 이름 입력

					// String 이라 equals 사용
					if (name[count].equals("-1")) { // 0 입력받고 처음으로 돌아감
						break;
					}

					for (int j = 0; j < 3; j++) {
						System.out.println(title[j + 1] + "점수를 입력하세요. (-1.이전 페이지 이동)");
						score[i][j] = scan.nextInt();
						if (score[i][j] == -1) {
							break loop2;
						} // if
					} // for
					count++; // 1명추가
				} // for

				System.out.println("학생 수 :" + count);
				System.out.println();
				break;

			case 2:
				System.out.println("[[학생 점수 출력]]");
				for (int i = 0; i < 3; i++) {
					for (int j = 0; j < 3; j++) {
						System.out.printf("%d\t",score[i][j]);
					} // for
					System.out.println();
				} // for
				System.out.println();
				break;
			case 3:
				break;
			case 4:
				break;
			case 5:
				break;
			case 0:
				System.out.println("프로그램 종료");
				break loop;

			} // switch

		}

	}

}
