package p1025;

import java.util.Scanner;

public class J1025_01 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		// 이름 국어 영어 수학 총점 평균
		// 홍길동 100 100 90 290 96.67
		// 유관순 100 90 90 280 93.33
		// 이순신 80 90 100 270 90.00

		// name, score total avg 배열

		Scanner scan = new Scanner(System.in);
		String[] name = new String[3];
		String[] title = { "이름","국어", "영어", "수학","합계","평균","등수" };
		//					 0		1	  2 	 3	   4 	 5	   6
		int choice = 0;
		int[][] score = new int[3][3];
		int[] total = new int[3];
		double[] avg = new double[3];
		int count = 0;

		while (true) {

			System.out.println("[학생 성적 프로그램]");
			System.out.println("[1.학생 입력]");
			System.out.println("[2.학생 출력    ]");
			System.out.println("0.종료");
			System.out.println("------------------------------");
			System.out.println("[원하는 번호를 입력하세요.]");
			choice = scan.nextInt();

			switch (choice) {
			case 1:
				System.out.println("학생 입력");

				for (int i = count; i < 3; i++) {
					System.out.println("이름을 입력해주세요.");
					name[i] = scan.next();
					for (int j = 0; j < score[i].length; j++) {
						System.out.println(name[i] + "의\t" + title[j+1] + "점수 입력");
						score[i][j] = scan.nextInt();
						total[i] += total[i] + score[j].length;
						avg[i] = total[i] / 3;
					}

				}

				break;
			case 2:
				System.out.println("학생 출력");
				for (int i = 0; i < 3; i++) {
					for (int j = 0; j < 3; j++) {
						System.out.printf("%s\t %s\t %s\t %s\t %s\t %s\n", title[0],title[1],title[2],title[3],title[4],title[5] );
						System.out.printf("%s\t %s\t %s\t %s\t %s\t %s\n", name[i],score[i][0],score[i][1],score[i][2],total[i],avg[i]);

					}
				}
				break;
			case 0:
				System.out.println("프로그램 종료");
				break;
			}

		} // while

	}

}
