package p1025;

import java.util.Scanner;

public class J1025_01 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		// 이름 국어 영어 수학 총점 평균
		// 홍길동 100 100 90 290 96.67
		// 유관순 100 90 90 280 93.33
		// 이순신 80 90 100 270 90.00

		// name, score total avg 배열

		Scanner scan = new Scanner(System.in);
		String[] name = new String[3];
		String[] title = { "국어", "영어", "수학" };
		int choice = 0;
		int[][] score = new int[3][3];
		int[] total = new int[3];
		double[] avg = new double[3];
		int count = 0;
		while (true) {

			System.out.println("[학생 성적 프로그램]");
			System.out.println("[1.학생 입력]");
			System.out.println("[2.학생 출력    ]");
			System.out.println("0.종료");
			System.out.println("------------------------------");
			System.out.println("[원하는 번호를 입력하세요.]");
			choice = scan.nextInt();

			switch (choice) {
			case 1:
				System.out.println("학생 입력");
				for (int i = count; i < 3; i++) {
					System.out.println((count + 1) + "이름을 입력해주세요.");
					name[count] = scan.next();
					System.out.println();
					
					
					for (int j = 0; j < 3; j++) {
						System.out.println(title[j] + "점수 입력");
						score[i][j] = scan.nextInt();
						total[i] += total[i] + j;
					}

				}

				break;
			case 2:
				System.out.println("학생 출력");

				break;
			case 0:
				break;
			}

		} // while

	}

}
