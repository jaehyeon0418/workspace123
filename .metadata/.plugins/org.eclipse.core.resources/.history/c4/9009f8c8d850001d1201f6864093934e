package p1021;

public class J1021_02 {

	public static void main(String[] args) {
		// 주어진 배열의 전체 항목의 합과 평귡값 구하기
		// sum 991
		// avg 88.1
		
		
		int [][] arr = {
				{95,86},
				{83,92,96},
				{78,83,93,88}
		};

		
		
		
		
		int sum = 0;
		double avg = 0;
		
		int [][] arr2 = {{1,2},{3,4}};
		for (int i = 0; i < 2; i++) {
			for (int j = 0; j < 2; j++) {
				sum = sum + arr2[i][j];
				
			}
		}
		
		
		
		System.out.println("sum :"+sum);
		System.out.println("avg :"+avg);
		
		
	}

}
